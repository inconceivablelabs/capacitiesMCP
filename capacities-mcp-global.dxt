{
  "name": "Capacities MCP Server (Global Install)",
  "description": "Advanced Capacities knowledge management integration - for global NPM installation",
  "version": "1.0.0",
  "author": "Tom Booth",
  "homepage": "https://github.com/inconceivablelabs/capacitiesMCP",
  "mcpServers": {
    "capacities": {
      "command": "capacities-mcp-server",
      "env": {
        "CAPACITIES_API_TOKEN": "${CAPACITIES_API_TOKEN}",
        "CAPACITIES_API_BASE_URL": "https://api.capacities.io",
        "LOG_LEVEL": "info"
      }
    }
  },
  "envVariables": {
    "CAPACITIES_API_TOKEN": {
      "description": "Your Capacities API token (get from Capacities Desktop App → Settings → API)",
      "required": true,
      "type": "string"
    }
  },
  "tools": [
    {
      "name": "search_content",
      "description": "Search for content across your Capacities spaces using keywords"
    },
    {
      "name": "list_spaces", 
      "description": "Get a list of all your Capacities spaces"
    },
    {
      "name": "get_space_info",
      "description": "Get detailed information about a specific Capacities space"
    },
    {
      "name": "create_structured_note",
      "description": "Create structured note templates (meeting, daily-reflection, task-list, research)"
    },
    {
      "name": "smart_search",
      "description": "Intelligent search with context awareness and related content"
    },
    {
      "name": "advanced_search", 
      "description": "Search with date ranges, object types, and other filters"
    },
    {
      "name": "analyze_content_patterns",
      "description": "Analyze patterns in your Capacities content"
    },
    {
      "name": "identify_knowledge_gaps",
      "description": "Find topics that might be missing or underdeveloped"
    }
  ],
  "resources": [
    {
      "name": "spaces",
      "uri": "capacities://spaces",
      "description": "List of all your Capacities spaces"
    }
  ],
  "installation": {
    "steps": [
      "1. Get your Capacities API token from Capacities Desktop App → Settings → API",
      "2. Install globally: npm install -g capacities-mcp-server",
      "3. Import this DXT file into Claude Desktop",
      "4. Enter your API token when prompted"
    ],
    "requirements": [
      "Node.js 18 or higher",
      "Capacities account with API access",
      "Capacities Desktop App"
    ]
  }
}